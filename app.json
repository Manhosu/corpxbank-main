{
  "expo": {
    "name": "CorpxBank",
    "slug": "corpx-bank",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./CorpxBank/assets/X_icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./CorpxBank/assets/CorpxVdLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "ios": {
      "bundleIdentifier": "com.corpx.corpxbank",
      "supportsTablet": true,
      "buildNumber": "1",
      "jsEngine": "jsc",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Este aplicativo usa o Face ID para permitir que você faça login de forma rápida e segura.",
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para escanear QR Codes, códigos de barras e documentos.",
        "NSMicrophoneUsageDescription": "Este app pode precisar acessar o microfone para funcionalidades da WebView.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.corpx.corpxbank",
      "adaptiveIcon": {
        "foregroundImage": "./CorpxBank/assets/X_icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "usesCleartextTraffic": true,
      "edgeToEdgeEnabled": true,
      "permissions": [
        "INTERNET",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "DOWNLOAD_WITHOUT_NOTIFICATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./CorpxBank/assets/X_icon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Este app precisa acessar a câmera para escanear QR Codes, códigos de barras e documentos.",
          "microphonePermission": "Este app pode precisar acessar o microfone para funcionalidades da WebView."
        }
      ],
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          }
        }
      ]
    ],
    "assetBundlePatterns": [
      "CorpxBank/assets/**/*"
    ],
    "owner": "corpxfinal",
    "extra": {
      "eas": {
        "projectId": "0f7ce716-f703-468d-9c3f-2d606a813479"
      }
    }
  }
}
